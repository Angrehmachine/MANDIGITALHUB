<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ServiceNeedsTruck</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
					RecordType.Name == &apos;Service&apos; ,
					ISBLANK(Truck__c)
					)</errorConditionFormula>
    <errorDisplayField>Truck__c</errorDisplayField>
    <errorMessage>Asset of type Service requires a Truck</errorMessage>
</ValidationRule>
